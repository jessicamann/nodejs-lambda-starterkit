{
  "name": "nodejs-lambda-starterkit",
  "version": "1.0.0",
  "description": "Template for a nodejs app run as a lambda in AWS",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "clean": "rm -rf dist/",
    "start": "node -r dotenv/config dist/index.js",
    "start:asLambda": "serverless offline",
    "prepare": "husky install",
    "lint": "prettier --check . && eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "jest",
    "generate:openapi": "node dist/docs.js"
  },
  "author": "",
  "license": "ISC",
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "overrides": [
      {
        "files": ".git-coauthors",
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "resetMocks": true,
    "moduleNameMapper": {
      "^@config": "<rootDir>/src/config/config"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@fastify/autoload": "^5.7.1",
    "@fastify/aws-lambda": "^3.2.0",
    "@fastify/sensible": "^5.2.0",
    "@fastify/swagger": "^8.3.1",
    "env-var": "^7.3.0",
    "fastify": "^4.15.0",
    "pino": "^8.11.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "^27.4.7",
    "lint-staged": "^13.2.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.4.1",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "ts-jest": "^27.0.5",
    "tsc-alias": "^1.8.5",
    "typescript": "^4.5.4"
  }
}
